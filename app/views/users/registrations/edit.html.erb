<div class="container">
  <h2>編集ページ</h2>

  <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
    <%= render "users/shared/error_messages", resource: resource %>

    <div class="field">
      <%= f.label :name ,"ユーザーネーム"%><br />
      <%= f.text_field :name, autofocus: true, autocomplete: "name" %>
    </div>
    
    <div class="field mt-3">
      <%= f.label :image , "画像" %>
      <%= f.file_field :image %>
    </div>

    <div class="field">
      <%= f.label :profile ,"プロフィール" %><br />
      <%= f.text_area :profile, autofocus: true %>
    </div>


    <div class="field">
      <%= f.label :email , "メールアドレス" %><br />
      <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
    </div>

    <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
      <div>Currently waiting confirmation for: <%= resource.unconfirmed_email %></div>
    <% end %>

    <div class="field">
      <%= f.label :password , "パスワード" %> <i>(変更しない場合は空白にしてください)</i><br />
      <%= f.password_field :password, autocomplete: "new-password" %>
      <% if @minimum_password_length %>
        <br />
        <em><%= @minimum_password_length %> characters minimum</em>
      <% end %>
    </div>

    <div class="field">
      <%= f.label :password_confirmation , "パスワードの確認" %><br />
      <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
    </div>

    <div class="field">
      <%= f.label :current_password , "現在のパスワード" %> <i>(変更内容を確認するため、現在のパスワードが必要です)</i><br />
      <%= f.password_field :current_password, autocomplete: "current-password" %>
    </div>

    <div class="action mt-2">
      <%= f.submit "変更を保存する" %>
    </div>
  <% end %>

  <h3 class="mt-5">アカウントの削除</h3>

  <p> <%= button_to "削除する", registration_path(resource_name), data: { confirm: "本当にしますか?" }, method: :delete %></p>

</div>