<h1><%= link_to "投稿", new_instagram_path %></h1>
<%= button_to 'ログアウト', destroy_user_session_path, method: :delete %>
<% if user_signed_in? %>
<%= link_to "マイページへ", user_path(current_user.id) %>
<% end %>

<% @images.each do |t| %>

    <a href="/users/<%= t.user.id %>"><%= t.user.name %></a>
    <%= t.user.email %>
    <%= image_tag t.image1_url, class:"la" if t.image1? %>
    <%= image_tag t.image2_url, class:"la" if t.image2? %>
    <%= image_tag t.image3_url, class:"la" if t.image3? %>
    <%= image_tag t.image4_url, class:"la" if t.image4? %>

    <p><%= t.comment %></p>

    <% if user_signed_in? %>
        <% if current_user.already_liked?(t) %>
            <%= link_to instagram_like_path(id: t.id, instagram_id: t.id), method: :delete do %>
                <i class="fas fa-heart"></i><%= t.likes.count %>>
            <% end %>
        <% else %>
            <%= link_to instagram_likes_path(id: t.id, instagram_id: t.id), method: :post do %>
                <i class="far fa-heart"></i><%= t.likes.count %>
            <% end %>
        <% end %>
    <% else %>
        <i class="far fa-heart"></i><%= t.likes.count %>
    <% end %>
  
    <% if user_signed_in? && current_user.id == t.user_id %>

        <%= link_to "詳細へ", instagram_path(t.id) %>
        <%= link_to "編集する", edit_instagram_path(t.id) ,class:"btn btn-outline-primary"%>
        <%= link_to "削除する", instagram_path(t.id), method: :delete ,class:"btn btn-outline-danger"%>
    <% end %>
<% end %>