<h1><%= link_to "投稿", new_instagram_path %></h1>
<%= button_to 'ログアウト', destroy_user_session_path, method: :delete %>
<% if user_signed_in? %>
<%= link_to "マイページへ", user_path(current_user.id) %>
<% end %>

<h3>投稿を検索</h3>
 <%= form_tag({controller:"instagrams",action:"index"}, method: :get) do %>
   <%= text_field_tag :search %>
   <%= submit_tag '検索する'  %>
<% end %>

<% @images.each do |t| %>

    <div class="card mt-3" style="width: 36rem;" >
        <div class="card-header">
            <a href="/users/<%= t.user.id %>" class="d-flex flex-row">
                <p class="icon">
                    <%= image_tag t.user.image_url, size: "40x40", class:"rounded-circle" if t.user.image? %>
                </p>
                <p class="h4 ml-3">
                    <%= t.user.name %>
                </p>
            </a>
        </div>
        
        <div class="card-body p-0">
            <%= image_tag t.image1_url, class:"card-img-top" if t.image1? %>
        </div>

        <div class="class-footer">
            <%= t.user.email %>
            <p><%= t.comment %></p>

            <% if user_signed_in? %>
                <% if current_user.already_liked?(t) %>
                    <%= link_to instagram_like_path(id: t.id, instagram_id: t.id), method: :delete do %>
                        <i class="fas fa-heart"></i><%= t.likes.count %>>
                    <% end %>
                <% else %>
                    <%= link_to instagram_likes_path(id: t.id, instagram_id: t.id), method: :post do %>
                        <i class="far fa-heart"></i><%= t.likes.count %>
                    <% end %>
                <% end %>
            <% else %>
                <i class="far fa-heart"></i><%= t.likes.count %>
            <% end %>
        
            <%= link_to "詳細へ", instagram_path(t.id) %>
            <% if user_signed_in? && current_user.id == t.user_id %>

                <%= link_to "編集する", edit_instagram_path(t.id) ,class:"btn btn-outline-primary"%>
                <%= link_to "削除する", instagram_path(t.id), method: :delete ,class:"btn btn-outline-danger"%>
            <% end %>
            <% if user_signed_in? %>
                <%= form_with(model: [t, @comment], local: true) do |f| %>
                    <%= f.text_area :content %>
                    <%= button_tag type: "submit" do %>
                        <i class="far fa-comments"></i> コメントする
                    <% end %>
                <% end %>
            <% end %>
        </div>
    </div>
<% end %>